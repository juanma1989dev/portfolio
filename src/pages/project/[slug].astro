---
import PortfolioLayout from "../../layouts/PortfolioLayout.astro";
import projects from "../../data/projects.json";

export async function getStaticPaths() {
    const visibleProjects = projects.filter(p => p.visible !== false);
    return visibleProjects.map((project) => ({
        params: { slug: project.slug },
        props: project,
    }));
}

const project = Astro.props;
---

<PortfolioLayout title={project.title}>
    <main class="py-5 px-4">
        <div class="max-w-4xl mx-auto">
            <!-- Botón para volver -->
            <a href="/#projects" class="inline-flex items-center gap-2 text-white hover:underline mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
                Volver a Proyectos
            </a>

            <!-- Contenedor principal del proyecto -->
            <div class="bg-gray-800/50 backdrop-blur-sm border border-white/10 rounded-lg shadow-lg overflow-hidden">
                <img src={project.imageLink} alt={`Imagen del proyecto ${project.title}`} class="w-full object-cover"/>
                
                <div class="p-6 md:p-10">
                    <header class="mb-8">
                        <h1 class="text-xl md:text-2xl font-bold text-white mb-2">{project.title}</h1>
                        <span class="bg-blue-900/50 text-blue-300 border border-blue-700 px-3 py-1 rounded-full text-sm font-semibold">{project.category}</span>
                    </header>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <!-- Columna de Descripción -->
                        <div class="md:col-span-2">
                            <h2 class="text-xl font-semibold text-white mb-4 border-b border-white/10 pb-2">Descripción</h2>
                            <div class="prose prose-invert max-w-none text-gray-300 space-y-4">
                                {project.descripcion.map((parrafo) => <p>{parrafo}</p>)}
                            </div>
                        </div>

                        <!-- Columna de Tecnologías y Enlaces -->
                        <div>
                            <!--Tecnologías -->
                            <h2 class="text-xl font-semibold text-white mb-4 border-b border-white/10 pb-2">Tecnologías</h2>
                            <div class="flex flex-wrap gap-2 mb-8">
                                {project.technologies.map((tech) => (
                                    <span class="bg-gray-700 text-gray-300 text-sm font-medium px-3 py-1 rounded-full">
                                        {tech}
                                    </span>
                                ))}
                            </div>

                             <!-- Enlaces -->
                            {project.link && project.public && (
                                <div class="mt-auto">
                                    <h2 class="text-xl font-semibold text-white mb-4 border-b border-white/10 pb-2">Enlaces</h2>
                                    <a href={project.link} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 bg-blue-600 text-white font-bold px-3 py-1 rounded-lg hover:bg-blue-700 transition-colors shadow-lg w-full text-center text-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h6"/></svg>
                                        Visitar Proyecto
                                    </a>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</PortfolioLayout>
