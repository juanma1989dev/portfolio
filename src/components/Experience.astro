---
import experience from "../data/experience.json";
import ExperienceItem from "./ExperienceItem.astro";
---

<section id="experiencia" class="py-10">
    <h2 class="text-2xl font-bold text-center mb-5">Experiencia Laboral</h2>
    <div class="max-w-4xl mx-auto">
        <div class="space-y-8">
            {experience.map(job => (
                <ExperienceItem job={job} />
            ))}
        </div>
    </div>
</section>
