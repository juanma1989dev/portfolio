---
const { project, idx } = Astro.props;
---

<a href={`/project/${project.slug}`} 
   class="group flex flex-col rounded-lg overflow-hidden bg-gray-800/50 backdrop-blur-sm border border-white/10 shadow-lg h-full transition-all duration-300 hover:shadow-2xl hover:border-blue-400/50 hover:-translate-y-1">
    
    <!-- Imagen del Proyecto -->
    <div class="relative overflow-hidden">
        <img src={project.imageLink} alt={`Imagen del proyecto ${project.title}`} 
             class="w-full h-40 object-cover transition-transform duration-300 group-hover:scale-105" />
        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
    </div>
    
    <div class="p-5 flex flex-col flex-grow">
        <!-- Título y Descripción -->
        <header>
            <h3 class="text-xl font-bold text-white mb-2">{project.title}</h3>
            <p class="text-gray-400 text-sm mb-4">{project.descriptionCorta}</p>
        </header>
        
        <!-- Tecnologías -->
        <div class="flex flex-wrap gap-2 mb-4">
            {project.technologies.slice(0, 3).map((tech:string) => (
                <span class="bg-gray-700/50 border border-white/10 text-gray-300 text-xs font-medium px-2.5 py-1 rounded-full">
                    {tech}
                </span>
            ))}
        </div>

        <!-- Footer de la Card -->
        <footer class="mt-auto pt-4 border-t border-white/10 flex justify-between items-center ">
            <span class="inline-flex items-center gap-2 text-sm font-semibold text-blue-300">
                Ver Detalles ->
            </span>
        </footer>
    </div>
</a>